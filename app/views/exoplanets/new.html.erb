<%= form_for @exoplanet do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%=f.label "Distance from Earth" %>
  <%= f.text_field :distance%>
  <br>
  <%=f.label "Year of discovery" %>
  <%=f.date_select :disc_year %>
  <br>
  <%=f.label "Period of orbit" %>
  <%=f.text_field :period %>
  <br>
  <%= f.submit 'New Exoplanet' %>
<% end %>