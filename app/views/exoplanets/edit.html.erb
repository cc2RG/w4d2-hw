<%= form_for @exoplanet do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%=f.label :distance %>
  <%= f.text_field :distance%>
  <br>
  <%=f.label :disc_year %>
  <%=f.date_field :disc_year %>
  <br>
  <%=f.label :period %>
  <%=f.text_field :period %>
  <br>
  <%= f.submit 'Edit Exoplanet' %>
<% end %>